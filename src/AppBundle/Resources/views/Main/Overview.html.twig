{% extends "AppBundle::base.html.twig" %}


{% block title %}iFarm - pro moderní farmáře{% endblock %}

{% block body %}
    <div class="container">


        <h1 class="center-align">Přehled</h1>


        <div class="row" style="line-height: 87px;">

            <div class="col s12 m3">
                <a class="waves-effect waves-light btn-large center-align z-depth-0" href={{url('main_demand')}}>
                    <i class="material-icons left">clear_all</i>Moje poptávky
                </a>
            </div>
            <div class="col s12 m6 ">
                <h3 class="center-align">Zajímavé poptávky</h3>
            </div>
            <div class="col s12 m3">
                <div class="right">
                    <a class="waves-effect waves-light btn-large center-align z-depth-0" href={{url('item_create',{'typeStr': 'demand'})}}>
                        <i class="material-icons left">add</i>Vložit poptávku
                    </a>
                </div>

            </div>
        </div>

        {% include 'AppBundle::Tables/itemsTable.html.twig' with {'items': demands, 'showOwner': true}%}

        
        <br><br>

        <div class="row" style="line-height: 87px;">

            <div class="col s12 m3">
                <a class="waves-effect waves-light btn-large center-align z-depth-0" href={{url('main_offer')}}>
                    <i class="material-icons left">clear_all</i>Moje nabídky
                </a>
            </div>
            <div class="col s12 m6 ">
                <h3 class="center-align">Zajímavé nabídky</h3>
            </div>
            <div class="col s12 m3">
                <div class="right">
                    <a class="waves-effect waves-light btn-large center-align z-depth-0" href={{url('item_create',{'typeStr': 'offer'})}}>
                        <i class="material-icons left">add</i>Vložit nabídku
                    </a>
                </div>

            </div>
        </div>
        {% include 'AppBundle::Tables/itemsTable.html.twig' with {'items': offers, 'showOwner': true, 'ownerNaming': 'Nabízející'}%}

    </div>


{% endblock %}
