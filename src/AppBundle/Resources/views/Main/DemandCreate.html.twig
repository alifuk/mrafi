{% extends "AppBundle::base.html.twig" %}


{% block title %}iFarm - pro moderní farmáře{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="center-align">Vytvoření poptávky</h1>

        <div class="row">
            <div class="col s12 m4 offset-m4">
                <form action="{{url('main_demandCreate')}}" method="POST">
                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="Vložte název poptávky" id="name" type="text" name="name">
                            <label for="name">Název</label>
                        </div>
                    </div>
                    <p>
                        <input type="checkbox" id="public" name="public"/>
                        <label for="public">Veřejné</label>
                    </p>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="note" name="note" class="materialize-textarea"></textarea>
                            <label for="note">Poznámka</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <select name="category">
                                <option value="" disabled selected>Vyberte kategorii</option>
                                {% for category in categories %}
                                    <option value="{{category.id}}">{{category.name}}</option>
                                {% endfor %}

                            </select>
                            <label>Kategorie</label>
                        </div>
                    </div>
                                
                    <button class="btn waves-effect waves-light right" type="submit" name="action">Vytvořit poptávku
                        <i class="material-icons right">done</i>
                    </button>
                </form>
            </div>
        </div>


        <script>
            $(document).ready(function () {
                $('select').material_select();
            });
        </script>

    </div>

{% endblock %}
